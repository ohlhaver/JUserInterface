    <%= source_auto_complete_field( 'topic_preference', 'source_id', @topic_preference.source ) %>
  </span>
</div>
<div>
  <%= t('search.advance.filter.author') -%>
  <span class='adv_search_menu'>
    <%= author_auto_complete_field( 'topic_preference', 'author_id', @topic_preference.author ) %>
  </span>
</div>
