    <%= t('search.advance.filter.subscription') -%><span class='adv_search_menu'>
    <%= f.select( :subscription_type, Preference.for_select( :subscription_type), :include_blank => true ) %></span>
  </div>
</div>
<div class = "results_module"></div>
<%= t('search.advance.preferences.label') -%>
<div class = 'form_area'>
  <div>
    <%= t('search.advance.preferences.video') -%>
    <span><%= f.select(:video, Preference.for_select( :video ), :include_blank => true ) %></span>
  </div>
