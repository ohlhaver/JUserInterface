<%= f.error_messages %>
<div id = "topic_label">
  <span><%= t('topic.name') -%> </span>
  <span><%= f.text_field(:name, :id => "adv_searchfield" ) %></span>
</div>
<div class = "results_module"></div>
<%= t('search.advance.find.label') -%>
<div>
  <span><%= t('search.advance.find.at_least') -%></span>
  <span><%= f.text_field(:search_any, :id => "adv_searchfield") %></span>
</div>
<div>
  <span ><%= t('search.advance.find.all') -%></span>
  <span><%= f.text_field(:search_all, :id => "adv_searchfield") %></span>
</div>
<div>
  <span><%= t('search.advance.find.exact') -%></span>
  <span><%= f.text_field(:search_exact_phrase, :id => "adv_searchfield") %></span>
</div>
<div>
  <span><%= t('search.advance.find.without') -%></span>
