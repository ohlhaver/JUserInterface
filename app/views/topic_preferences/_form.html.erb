  </div>
<div class = 'form_area'>
  <div> 
    <%= t('search.advance.sorting') -%>
    <span class='adv_search_menu'>
      <%= f.select( :sort_criteria, Preference.for_select(:sort_criteria), :include_blank => true ) %>
    </span>
  </div>
  <div>
    <%= t('search.advance.timespan') -%>	<span class='adv_search_menu'>
    <%= f.select( :time_span, Preference.for_select( :time_span), :include_blank => true ) %></span>
  </div>
</div>
<div class = "results_module"></div>
<%= t('search.advance.filter.label') -%>
<div>
  <%= t('search.advance.filter.source') -%>
