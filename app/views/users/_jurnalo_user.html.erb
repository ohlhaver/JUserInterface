<%= jurnalo_user.label :login, t('jurnalo.register.login') %><br />
<%= jurnalo_user.text_field :login %><br />
<br />
<%= jurnalo_user.label :email, t('jurnalo.register.email') %><br />
<%= jurnalo_user.text_field :email %><br />
<br />
<%= jurnalo_user.label :name, t('jurnalo.register.name') %><br />
<%= jurnalo_user.text_field :name %><br />
<br />
<%= jurnalo_user.label :password, jurnalo_user.object.new_record? ? t('jurnalo.register.password') : t('jurnalo.register.change_password') %><br />
<%= jurnalo_user.password_field :password %><br />
<br />
<%= jurnalo_user.label :password_confirmation, t('jurnalo.register.confirm_password') %><br />
<%= jurnalo_user.password_field :password_confirmation %><br />
<% if admin?  %>
  <br/>
  <%= jurnalo_user.check_box :active %>
  <%= jurnalo_user.label :active, t('jurnalo.register.active') %> <br/>
<% end %>
