<div class='news_block'>
  <h2><span class="page_label"><%= t( 'jurnalo.contact.label' ) %></span></h2>
  <div class = "about">
    <% form_for @user_feedback, :url => contact_account_path do |f| %>
      <%= f.error_messages %>
      <div class= 'adv_search_lines'>
        <% if logged_in? %>
          <%= t( 'jurnalo.contact.phone_info') %><br/>
          <%= t( 'jurnalo.contact.user_message_label') %>
          <%= f.text_area 'message', :size => "40x10", :class => 'settings_field' %>
          <%= t('jurnalo.contact.service_time_info') %><br/>
        <% else %>
          <%= t( 'jurnalo.contact.guest_message_label') %>
          <%= f.text_area 'message', :size => "40x10", :class => 'settings_field' %>
          <%= t( 'jurnalo.contact.guest_email_label') %>
          <%= f.text_field 'email', :class => 'settings_field' %> (<%= t('activerecord.field.required') %>)
          <%= show_simple_captcha( :object => 'user_feedback', :image_style => 'blue', :distortion => 'high', :label => t('jurnalo.register.captcha'), :class => 'settings_field' ) %>
        <% end %>
        <%= submit_tag t('jurnalo.contact.send_button'), :class => 'confirmation_button' %>
      </div>
    <% end %>
  </div>
</div>
