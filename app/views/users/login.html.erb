<% content_for :header_javascript do %>
  <script src="<%= cas_login_js_url %>" type="text/javascript"></script>
<% end %>
<% content_for :custom_javascript do %>
  <script text='type/javascript'>
    Event.observe( window, 'load', function() {
      $('lt').value = window.login_ticket;
    });
  </script>
<% end %>
<div class='news_group'>
  <div class='news_block'>
    <%= t('navigation.top.login') %> (<%= t( 'jurnalo.login.new_user', :register => link_to( t('navigation.top.register').downcase ) ) %>)
  </div>
</div>
<div class='news_group'>
  <div class='news_block'>
    <%= t('jurnalo.login.existing_user')%>:
    <br/>
    <% form_tag CASClient::Frameworks::Rails::Filter.client.login_url, :id => 'login_form' do %>
      <div>
        <span><%= t('jurnalo.login.username')%></span>
        <span><%= text_field_tag( 'username' )%></span>
      </div>
      <div>
        <span><%= t('jurnalo.login.password')%></span>
        <span><%= password_field_tag( 'password' ) %></span>
      </div>
      <div>
        <span><%= check_box_tag( 'remember-me', '1' ) %>&nbsp; <%= t('jurnalo.login.remember_me') %></span>
      </div>
      <%= hidden_field_tag( 'lt' ) %>
      <%= hidden_field_tag( 'service', cas_service_url ) %>
      <%= hidden_field_tag( 'oe', cas_on_error_url ) %>
      <%= submit_tag( t('navigation.top.login'), :class => 'adv_searchbutton') %> &nbsp; <%= link_to "#{t('jurnalo.login.forgot_password')}?", new_password_reset_path %>
    <% end %>
  </div>
</div>
<div class='news_group'>
  <div class='news_block'>
    <%= t('jurnalo.register.new_user')%>
  </div>
</div>
<div class='news_group'>
  <div class='news_block'>
    <%= t('jurnalo.register.benefits.header') %>:
    <br/>
    <%= t('jurnalo.register.benefits.body') %>
  </div>
  <% form_tag new_account_path, :method => :get do %>
    <%= submit_tag t('jurnalo.register.now'), :class => 'adv_searchbutton' %>
  <% end %>
</div>
