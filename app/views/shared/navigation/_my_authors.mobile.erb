<% mouse_over( :dialog ) do | dialogEventClass, dialogItemClass | %>
  <li class='<%= dialogEventClass -%>'>
    <%= link_to( t('navigation.main.my_authors', :prefix => t('prefix.my') ) , jurnalo_author_path( 'my' ) ) %>
    <span class='navDialogBox <%= dialogItemClass -%>'>
      <%= link_to image_tag('up.gif'), jurnalo_up_author_path( 'my' ) %>
      <%= link_to image_tag('down.gif'), jurnalo_down_author_path( 'my' ) %>
    </span>
  </li>
<% end %>